---
---

[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date | date_to_string }}",
      "description" : "{{ post.content | strip_html | strip_newlines | escape }}",
      "blurb" : "{{ post.blurb }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]